<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
    <!-- Главно меню -->
    <menu id="root-menu" label="Main Menu">

        <!-- Първоначални програми -->
        <item label=" Terminal">
            <action name="Execute">
                <command>xfce4-terminal</command> <!-- Сменете с предпочитания терминал -->
            </action>
        </item>

        <item label=" Web Browser">
            <action name="Execute">
                <command>firefox</command> <!-- Сменете с предпочитания браузър -->
            </action>
        </item>

        <!-- Подменю за любими приложения -->
        <menu id="favorites" label="󰂮 Favorites">
            <item label="󱏒 File Manager">
                <action name="Execute">
                    <command>thunar</command> <!-- Сменете с предпочитания файлов мениджър -->
                </action>
            </item>

            <item label=" Text Editor">
                <action name="Execute">
                    <command>gedit</command> <!-- Сменете с предпочитания текстов редактор -->
                </action>
            </item>
        </menu>

        <!-- Разделител -->
        <separator/>

	<!-- Openbox опции директно в главното меню -->
        <item label=" Reconfigure">
            <action name="Reconfigure"/>
        </item>

        <item label="󱄌 Restart Openbox">
            <action name="Restart"/>
        </item>

        <item label="󰗽 Logout">
            <action name="Exit"/>
        </item>

	<!-- Разделител -->
        <separator/>


        <!-- Опции за сесията -->
        <item label="󰝳 Reboot">
            <action name="Execute">
                <command>reboot</command>
            </action>
        </item>
        <item label=" Shutdown">
            <action name="Execute">
                <command>shutdown now</command>
            </action>
        </item>

    </menu>
</openbox_menu>

